{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["es2017"],
    "declaration": false,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
